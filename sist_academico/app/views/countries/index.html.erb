<h1>Lista de Ciudades</h1>

<table>
  <tr>
    <th>Pais</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @countries.each do |country| %>
  <tr>
    <td><%= country.pais %></td>
    <td><%= link_to 'Mostrar', country %></td>
    <td><%= link_to 'Editar', edit_country_path(country) %></td>
    <td><%= link_to 'Eliminar', country, method: :delete, data: { confirm: 'Estas deguro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Registrar Nuevo', new_country_path %>

<div class="row">
  <div class="span9 offset3">
    <h1>Lista de Paises</h1>

    <table class="table table-bordered">
      <tr class="table-title">
        <th>Pais</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @countries.each do |country| %>
      <tr>
        <td><%= country.pais %></td>
        <td><%= link_to 'Mostrar', country %></td>
        <td><%= link_to 'Editar', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %></td>
      </tr>
    <% end %>
    </table>
    <%= will_paginate @countries %>
  </div>
</div>

<%= link_to 'Registrar Nuevo', new_country_path %>

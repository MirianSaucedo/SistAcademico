<div class="row">
  <div class="span11 offset2">
    <h1>Lista de Docentes</h1>

    <table class="table table-bordered">
      <tr class="table-title">
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Telefono</th>
        <th>Matricula numero</th>
        <th>Titulo</th>
        <% if current_user.is_administrativo %>
          <th></th>
          <th></th>
        <% end %>
      </tr>

    <% @docentes.each do |docente| %>
      <tr>
        <td><%= link_to docente.user.nombre, docente %></td>
        <td><%= docente.user.apellido %></td>
        <td><%= docente.user.telefono %></td>
        <td><%= docente.matricula %></td>
        <td><%= docente.titulo %></td>
        <% if current_user.is_administrativo %>
          <td><%= link_to 'Editar', edit_docente_path(docente) %></td>
          <td><%= link_to 'Eliminar', docente, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </table>
    <%= will_paginate @docentes %>
  </div>
</div>

<% if current_user.is_administrativo %>
  <%= link_to 'Registrar nuevo Docente', new_docente_path %>
<% end %>
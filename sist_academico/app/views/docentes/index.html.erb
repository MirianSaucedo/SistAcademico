<div class="container">
  <div class="row">
    <h1>Lista de Docentes</h1>
    <div class="row" align="right">
      Search:<input type="text" id="kwd_search" value="" class="span3 seguido"/> 
    </div>
    <div class="row">
      <table id="my-table" class="table table-bordered">
        <thead class="table-title">
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Telefono</th>
            <th>Matricula numero</th>
            <th>Titulo</th>
            <% if current_user.is_administrativo %>
              <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @docentes.each do |docente| %>
            <tr>
              <td><%= link_to docente.user.nombre, docente %></td>
              <td><%= docente.user.apellido %></td>
              <td><%= docente.user.telefono %></td>
              <td><%= docente.matricula %></td>
              <td><%= docente.titulo %></td>
              <% if current_user.is_administrativo %>
                <td><%= link_to 'Editar', edit_docente_path(docente) %>
                <%= link_to 'Eliminar', docente, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @docentes %>
      <% if current_user.is_administrativo %>
        <%= link_to 'Registrar nuevo Docente', new_docente_path %>
      <% end %>
    </div>
  </div>
</div>


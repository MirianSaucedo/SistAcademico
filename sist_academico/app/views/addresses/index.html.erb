<div class="row">
  <div class="span9 offset3">
  <h1>Lista de Direcciones</h1>

    <table class="table table-bordered">
      <tr class="table-title">
        <th>Direccion</th>
        <th>Barrio</th>
        <th>Ciudad</th>
        <% if current_user.is_administrativo %>
          <th></th>
          <th></th>
        <% end %>
      </tr>

    <% @addresses.each do |address| %>
      <tr>
        <td><%= link_to address.direccion, address %></td>
        <td><%= address.barrio %></td>
        <td><%= address.city.city %></td>
        <% if current_user.is_administrativo %>
          <td><%= link_to 'Editar', edit_address_path(address) %></td>
          <td><%= link_to 'Eliminar', address, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </table>
    <%= will_paginate @addresses %>
  </div>
</div>

<% if current_user.is_administrativo %>
<%= link_to 'Registrar nuevo', new_address_path %>
<% end %>
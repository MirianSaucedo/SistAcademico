<h1>Listing cities</h1>

<table>
  <tr>
    <th>City</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cities.each do |city| %>
  <tr>
    <td><%= city.city %></td>
    <td><%= city.country.pais %></td>
    <td><%= link_to 'Mostrar', city %></td>
    <td><%= link_to 'Editar', edit_city_path(city) %></td>
    <td><%= link_to 'Eliminar', city, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Registrar nuevo', new_city_path %>
